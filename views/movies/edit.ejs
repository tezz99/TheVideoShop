<%include ../partials/header%>

	<div class="container-fluid main-container">

            <div class="row">
                <div class="col">
                    <h3 class="title">Edit Movie - <%=movie.title%></h3>

                    <div style="width: 25%; margin: 25px auto">
                        <form action="/movies/<%=movie._id%>?_method=PUT" method="POST">
                            <div class="form-group">
                                <input class="form-control" type="text" name="movie[title]" required value="<%=movie.title%>" placeholder="Movie Title">
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="text" name="movie[poster]" required value="<%=movie.poster%>" placeholder="Movie Poster Url>">
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="text" name="movie[trailer]" required value="<%=movie.trailer%>" placeholder="Movie Trailer Url">
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="number" name="movie[price]" required value="<%=movie.price%>" min="1.00" step="1.00">
                            </div>

                            <div class="form-group">
                                <!-- <input class="form-control" type="text" name="movie[description]" placeholder="Movie Description"> -->
                                <textarea class="form-control movie-description" name="movie[description]"><%=movie.description%></textarea>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                            </div>
                        </form>

                    </div>


                </div>
            </div>

        </div>

<%include ../partials/footer%>
<%include ../partials/header%>

<!-- ********************************** MAIN BODY ********************************** -->

        <div class="container-fluid main-container">
            <div class="row carousel-row">
                <!-- CAROUSEL -->
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="/img/new_releases.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="/img/justice_league.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="/img/thor.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
    					<span class="sr-only">Previous</span>
  					</a>
                    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    					<span class="carousel-control-next-icon" aria-hidden="true"></span>
   						 <span class="sr-only">Next</span>
  					</a>
                </div>
            </div>

            <h1 class="title">Latest Releases</h1>
            <div class="row catalogue-row">
            	<%movies.forEach(function(movie) {%>
	            	<div class="col-lg-2 col-md-4 col-xs-6 col-centered catalogue-item">
	                    <a href="/movies/<%=movie._id%>">
			           		<img class="img-thumbnail rounded" src="<%=movie.poster%>" alt="<%=movie.title%>" >
			          	</a>
	                </div>
            	<%});%>

            </div>

            <button type="button" class="btn btn-primary load-more">Load More</button>

        </div>

<%include ../partials/footer%>
<%include ../partials/header%>


	<div class="container-fluid main-container">

        

		<div class="row catalogue-row admin-heading">
              <div class="col-sm-12">
                    <h1 class="title">Admin Panel</h1>
              </div>
	    </div>

        <div class="row">
            <form action="/movies" method="POST" class="col-sm-6 offset-sm-3 align-self-center">
                <h2>Add a movie</h2>
                <div class="form-group">
                    <input class="form-control" type="text" required name="movie[title]" placeholder="Movie Name">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" required name="movie[poster]" placeholder="Poster Url">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" required name="movie[trailer]" placeholder="Youtube Trailer Url">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" required name="movie[price]" placeholder="Price ($)" min="0.99" step="0.01">
                </div>

                <div class="form-group">
                    <!-- <input class="form-control" type="text" name="movie[description]" placeholder="Movie Description"> -->
                    <textarea class="form-control" name="movie[description]">Movie Description</textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>


	    <div class="row catalogue-row admin-heading">
			<div class="col-sm-12">
                <!-- <h1>Manage Users</h1>  -->        
            </div>
	    </div>

        <div class="row">
           <div class="col-sm-6 offset-md-3 align-self-center">
                <h2>Manage Users</h2> 
                <table class="table">
                    <thead>
                        <th>Username</th>
                        <th></th>
                    </thead>
                    <tbody>

                        <% users.forEach(function(user) { %>

                            <% if (user.username === "admin") { %>
                                <% console.log("Skipping admin"); %>
                            <% } else { %>
                                <tr>
                                    <td><%= user.username %></td>
                                    <td class="admin-user-actions">
                                        <a href="/users/<%=user._id%>/edit" class="btn btn-primary btn-sm">Edit</a>
                                        <form id="delete" action="/users/<%=user._id%>?_method=DELETE" method="POST">
                                            <button class="btn btn-secondary btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        <% }); %>
                    </tbody>
                </table>
           </div>
        </div>
	</div>


<%include ../partials/footer%>
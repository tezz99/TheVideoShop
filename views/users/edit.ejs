<%include ../partials/header%>

	<div class="container-fluid main-container">

        <div class="row catalogue-row">
	    	<div style="width: 30%; margin: 25px auto">


				<% if (user === null) { %>

					<!-- DISPLAY CURRENT USER EDIT FORM - Only allowed to edit current user details -->
		    		<h1 style="text-align: center">Edit User Account - <%=currentUser.username%></h1>
					<form action="/users/<%=currentUser._id%>?_method=PUT" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" disabled placeholder="Username" value="<%=currentUser.username%>">
						</div>

						<div class="form-group">
							<input class="form-control" type="text" name="user[email]" placeholder="E-Mail" value="<%=currentUser.email%>">
						</div>

						<div class="form-group">
							<input class="form-control" type="text" name="user[fName]" placeholder="First Name" value="<%=currentUser.fName%>">
						</div>

						<div class="form-group">
							<input class="form-control" type="text" name="user[lName]" placeholder="Last Name" value="<%=currentUser.lName%>">
						</div>
						<div class="form-group">
							<button class="btn btn-lg btn-primary btn-block">Submit</button>
						</div>
					</form>

				<% } else { %>
					
					<!-- Admin is confirmed to be logged in. Show edit page for given user account. -->
					<h1 style="text-align: center">Edit User Account - <%=user.username%></h1>
					<form action="/users/<%=user._id%>?_method=PUT" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" disabled placeholder="Username" value="<%=user.username%>">
						</div>

						<div class="form-group">
							<input class="form-control" type="text" name="user[email]" placeholder="E-Mail" value="<%=user.email%>">
						</div>

						<div class="form-group">
							<input class="form-control" type="text" name="user[fName]" placeholder="First Name" value="<%=user.fName%>">
						</div>

						<div class="form-group">
							<input class="form-control" type="text" name="user[lName]" placeholder="Last Name" value="<%=user.lName%>">
						</div>
						<div class="form-group">
							<button class="btn btn-lg btn-primary btn-block">Submit</button>
						</div>
					</form>

				<% } %>
	
				

			</div>
	    </div>


    </div>

<%include ../partials/footer%>